<% if @user.errors.any? %>
  <div class="errors_explantion">
    <div class="alert alert-danger">
      <%= t(".des") %> <%= pluralize @user.errors.count, "error" %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
